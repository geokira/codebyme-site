                <%= label(:lead, :message, "Message", class:"h6") %>
                <%= text_area(:lead, :message, rows: 7, class:"form-control") %>
                <%= button_tag(type: 'submit',class: "btn btn-primary") do %>
                    <span class="fui-mail"></span>
                <% end %>
            <% end %>
